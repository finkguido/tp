<h2>Crear nueva pregunta</h2>

<p>{{mensaje}}</p>

<form method="post" action="/guardar">

    <label for="pregunta">Pregunta:</label><br>
    <input type="text" name="pregunta" id="pregunta" required><br><br>

    <label for="opcionA">Opción A:</label><br>
    <input type="text" name="opciones[A]" id="opcionA" required><br><br>

    <label for="opcionB">Opción B:</label><br>
    <input type="text" name="opciones[B]" id="opcionB" required><br><br>

    <label for="opcionC">Opción C:</label><br>
    <input type="text" name="opciones[C]" id="opcionC" required><br><br>

    <label for="opcionD">Opción D:</label><br>
    <input type="text" name="opciones[D]" id="opcionD" required><br><br>

    <label for="respuesta_correcta">Respuesta correcta:</label><br>
    <select name="respuesta_correcta" id="respuesta_correcta" required>
        <option value="A">A</option>
        <option value="B">B</option>
        <option value="C">C</option>
        <option value="D">D</option>
    </select><br><br>

    <label for="categoria_id">Categoría (ID):</label><br>
    <select name="categoria_id" id="categoria_id" required>
    {{#categories}}
    <option value="{{id}}">{{name}}</option>
    {{/categories}}
    </select>
    <br><br>

    <button type="submit">Guardar pregunta</button>
</form>


