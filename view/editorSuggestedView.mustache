<div class="w3-container" style="margin-top:70px">

  <div class="w3-container" style="margin:auto; max-width:600px;">

    <div class="w3-panel w3-card w3-round-large w3-padding-16 w3-light-grey">

      <h2 class="w3-center"><b>Pregunta sugerida por {{question.creator}}</b></h2>

      <div class="w3-section">
        <label><b>Pregunta</b></label>
        <textarea class="w3-input w3-border w3-round-large"
                  rows="3"
                  readonly>{{question.question_text}}</textarea>
      </div>

      <h3>Respuestas</h3>
      {{#answers}}
        <div class="w3-section">
          <textarea class="w3-input w3-border
                           {{#is_correct}}w3-border-green{{/is_correct}}
                           w3-round-large"
                    readonly>{{answer_text}}</textarea>
        </div>
      {{/answers}}

      <div class="w3-center w3-margin-top">

          <form action="/editor/rejectSuggestion/{{question.id}}" method="post"
                onsubmit="return confirm('¿Rechazar y eliminar esta pregunta?');">
              <button type="submit"
                      class="w3-button w3-orange w3-round-large w3-padding"
                      style="width:200px; margin-top:10px;">
                  Rechazar pregunta
              </button>
          </form>

          <form action="/editor/acceptSuggestion/{{question.id}}" method="post"
              onsubmit="return confirm('¿Aceptar esta pregunta?');">
          <button type="submit"
                  class="w3-button w3-green w3-round-large w3-padding"
                  style="width:200px;">
            Aceptar pregunta
          </button>
        </form>


        <a href="/editor/suggested"
           class="w3-button w3-red w3-round-large w3-padding"
           style="width:200px; margin-left:10px;">
          Volver
        </a>
      </div>

    </div>

  </div>

</div>
